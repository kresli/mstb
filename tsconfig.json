{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "noStrictGenericChecks": false,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "lib/"
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
